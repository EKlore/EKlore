template(name = "seeUniverses")
	if Template.subscriptionsReady
		.page-header
			h1 {{_ "seeUniverses"}}
		each universes
			.panel.panel-default
				.panel-heading
					p.panel-title #{name}
				.panel-body
					.thumbnail
						img(src="#{universeLogo}" alt="#{name}")
					.row
						.col-xs-12.col-sm-12.col-md-6.col-lg-6
							p {{_ "description"}} : #{label}
							p {{_ "universeLocation"}} :
								strong #{location}
						.col-xs-12.col-sm-12.col-md-6.col-lg-6
							each partners
								.thumbnail
									img(src="#{pictureUrl}" alt="#{companyName}")
									.caption
										h3 {{_ "universePartner"}} : #{companyName}
										p #{partnerDescription}
										p
											a.btn.btn-primary(href="#{partnerWebsite}" target="blank" role="button") {{_ "visitPartnerWebsite"}}
					.panel.panel-default
						.panel-heading
							p.panel-title {{_ "workshopsLinkedWithUniverse"}}
						.panel-body
							.row(style="display:flex; flex-wrap: wrap;")
								each workshops
									.col-xs-12.col-sm-6.col-md-6.col-lg-6
										.panel.panel-default
											.panel-body
												p.lead #{name}
												p #{description}
												p {{_ "workshopSpeaker"}} :
													strong #{speaker}
												p {{_ "workshopFormat"}} : #{format}
												a.btn.btn-primary(role="button" href="{{pathFor 'workshopDetails'}}") {{_ "moreInformations"}}
	else
		+spinner