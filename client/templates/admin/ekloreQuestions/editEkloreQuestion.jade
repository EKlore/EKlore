template(name="editEkloreQuestion")
	.container
		.panel.panel-default
			.panel-heading
				h3 {{_ "questionEdition"}} : #{title}
			.panel-body
				.panel.panel-default
					.panel-body
						form
							.form-group
								label(for="ekloreQuestionTitle") {{_ "ekloreQuestionTitle"}}
								input#ekloreQuestionTitle.form-control(type="text" value="#{title}")
							.form-group
								label(for="ekloreQuestionLevel") {{_ "ekloreQuestionLevel"}}
								input#ekloreQuestionLevel.form-control(type="number" min="2" max="100" step="1" value="#{level}")
							if deprecated
								.radio
									label
									input(type="radio" name="deprecated" value="notDeprecated")
									| {{_ "active"}}
								.radio
									label
									input(type="radio" name="deprecated" value="deprecated" checked)
									| {{_ "inactive"}}
							else
								.radio
									label
									input(type="radio" name="deprecated" value="notDeprecated" checked)
									| {{_ "active"}}
								.radio
									label
									input(type="radio" name="deprecated" value="deprecated")
									| {{_ "inactive"}}
					.panel-footer
						.row
							.col-xs-12.col-sm-6.col-md-6.col-lg-6
								a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
							.col-xs-12.col-sm-6.col-md-6.col-lg-6
								button#save.btn.btn-success.btn-block {{_ "save"}}
				.panel.panel-default
					.panel-heading
						h4 Groupe de question lié à la question
					.panel-body
						if questionGroupId
							with questionGroupData
								p #{title}
									button.btn.pull-rigth.btn-danger {{_ "remove"}}
						else
							each questionsGroups
								p #{title}
									button.btn.btn-success.btn-xs(type="submit") {{_ "linkToEkloreQuestion"}}
				.panel.panel-default
					.panel-heading
						h4 Choix
					.panel-body
						each choices
							p display choice
					.panel-footer
						p add choices