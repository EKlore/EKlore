template(name="workshopDetails")
	if Template.subscriptionsReady
		with workshop
			.panel.panel-default
				.panel-heading
					p.panel-title #{name}
				.panel-body
					p.lead #{description}
					p {{_ "workshopSpeaker"}} :
						strong #{speaker}
					p {{_ "workshopFormat"}} : #{format}
					.panel.panel-default
						.panel-body
							.row
								.col-xs-12.col-sm-4.col-md-4.col-lg-4
									p {{_ "startDate"}} :
										span.badge #{dateStart}
								.col-xs-12.col-sm-4.col-md-4.col-lg-4
									p {{_ "endDate"}} :
										span.badge #{dateEnd}
								.col-xs-12.col-sm-4.col-md-4.col-lg-4
									p
										span.badge #{peopleToGoCount}
										| {{_ "peopleAreGoingToo"}}
				if currentUser
					.panel-footer
						if isUserAlreadyIn
							button.removeFromWorkshop.btn.btn-danger(type="button") {{_ "youdontWantToGo"}}
						else
							button.goToWorkshop.btn.btn-primary(type="button") {{_ "doYouWantToGo"}}
	else
		+spinner