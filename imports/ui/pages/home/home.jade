template(name="home")
	.container-fluid.blue3.no-padd
		img.center-block.img-logo(src="/pictures/banniere.png" alt="{{_ 'feteAcronym'}}")
	.container.marg-top-20
		.row
			.col-xs-12.col-sm-6.col-md-6.col-lg-6
				h1.text-center.feteTitle.marg-bot-30.text-uppercase {{_ "presentationFete"}}
				p.text-justify {{_ "fetePresentation1"}}
				p.text-justify {{_ "fetePresentation2"}}
				p.text-justify {{_ "fetePresentation3"}}
				.row
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						p.text-center
							a.btn.btn-eklore.marg-bot-10.marg-top-10(role="button" href="{{pathFor 'aboutFete'}}") {{_ "moreInfos"}}
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						p.text-center
							a.btn.btn-eklore.marg-bot-10.marg-top-10(role="button" href="{{pathFor 'aboutEklore'}}") {{_ "aboutEklore"}}
			.col-xs-12.col-sm-6.col-md-6.col-lg-6
				iframe(width="100%" height="300" src="https://www.youtube.com/embed/CSMT4OL3HgA" frameborder="0" allowfullscreen)
		p.text-center
			.row
				.col-xs-12.col-sm-6.col-md-6.col-lg-6
					p.text-center
						a.btn.btn-eklore.marg-bot-20.marg-top-20(role="button" href="{{pathFor 'seeUniverses'}}") {{_ "seeUniverses"}}
				.col-xs-12.col-sm-6.col-md-6.col-lg-6
					p.text-center
						if currentUser
							a.btn.btn-eklore.marg-bot-20.marg-top-20(role="button" href="{{pathFor 'myProfile'}}") {{_ "completeYourProfile"}}
						else
							a.btn.btn-eklore.marg-bot-20.marg-top-20(role="button" href="{{pathFor 'myProfile'}}") {{_ "createYourProfile"}}
	.container-fluid.grey2(itemscope itemtype="http://schema.org/Festival")
		h1.text-center.feteTitle.marg-bot-30.text-uppercase {{_ "localisationAndSchedule"}}
		.container
			.row
				.col-xs-12.col-sm-6.col-md-6.col-lg-6
					address(itemprop="address" itemscope itemtype="http://schema.org/PostalAddress")
						strong {{_ "fete"}} {{_ "eklore"}}
						br
						span(itemprop="name") Cité des Métiers
						br
						span(itemprop="streetAddress") 30 Avenue Corentin Cariou
						br
						span(itemprop="postalCode") 75019
						span(itemprop="addressLocality") Paris
					address
						strong {{_ "dateFete"}}
						br
						| De 
						span(itemprop="startDate" content="2016-10-03T09:00") {{_ "hourFete"}}
						| à 
						span(itemprop="endDate" content="2016-10-03T23:00") {{_ "hourFete"}}
					address
						strong {{_ "contact"}}
						br
						a(href="mailto:contact@eklore.fr") contact@eklore.fr
					p
						a.btn.btn-eklore.marg-bot-10(role="button" target="blank" href="https://www.weezevent.com/festival-eklore-des-talents-et-de-l-emploi") {{_ "linkTicketing"}}
					p.text-justify {{_ "praticalInfos1"}}
					p.text-justify {{_ "praticalInfos2"}}
					blockquote
						p {{_ "quote4"}}
				.col-xs-12.col-sm-6.col-md-6.col-lg-6
					+map
	.container
		+majorPartners
		p.text-center
			a.btn.btn-eklore.marg-bot-20(role="button" href="{{pathFor 'partners'}}") {{_ "seeAllOurPartners"}}
	.container-fluid.grey2
		.container
			+majorVolunteers
			p.text-center
				a.btn.btn-eklore.marg-bot-20(role="button" href="{{pathFor 'volunteers'}}") {{_ "seeAllOurVolunteers"}}