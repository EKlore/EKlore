template(name="editWorkshop")
	.container
		with workshop
			.panel.panel-default
				.panel-heading
					h3 {{_ "workshopEdition"}} : #{name}
				.panel-body
					.panel.panel-default
						.panel-body
							form
								.form-group
									label(for="workshopName") {{_ "workshopName"}}
									input#workshopName.form-control(type="text" value="#{name}")
								.form-group
									label(for="workshopDescription") {{_ "workshopDescription"}}
									textarea#workshopDescription.form-control(rows="3") #{description}
								.form-group
									label(for="workshopDateStart") {{_ "workshopStartDate"}}
									.input-group.datetimepicker
										span.input-group-addon
											i.glyphicon.glyphicon-calendar
										input#workshopDateStart.set-due-date.form-control(type="text" value="#{dateStart}")
								.form-group
									label(for="workshopEndDate") {{_ "workshopEndDate"}}
									.input-group.datetimepicker
										span.input-group-addon
											i.glyphicon.glyphicon-calendar
										input#workshopEndDate.set-due-date.form-control(type="text" value="#{dateEnd}")
								.form-group
									label(for="workshopColor") {{_ "workshopColor"}}
									if color
										input#workshopColor.form-control(type="color" name="workshopColor" value="#{color}")
									else
										input#workshopColor.form-control(type="color" name="workshopColor" value="#3355CC")
						.panel-footer
							.row
								.col-xs-12.col-sm-6.col-md-6.col-lg-6
									a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
								.col-xs-12.col-sm-6.col-md-6.col-lg-6
									button#save.btn.btn-success.btn-block {{_ "save"}}
					.panel.panel-success
						.panel-heading
							p.panel-title {{_ "universesLinkedWithWorkshop"}}
						.panel-body
							.row
								each universesLinked
									.col-xs-12.col-sm-6.col-md-6.col-lg-6
										+universesToRemove
					.panel.panel-danger
						.panel-heading
							p.panel-title {{_ "universesNotLinkedWithWorkshop"}}
						.panel-body
							.row
								each universes
									.col-xs-12.col-sm-6.col-md-6.col-lg-6
										+universesToAdd