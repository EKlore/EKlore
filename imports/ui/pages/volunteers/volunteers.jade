template(name="volunteers")
	if Template.subscriptionsReady
		.container-fluid.blue2
			.container
				h1.text-center.text-uppercase {{_ "allOurVolunteers"}}
				p.text-center
					a.btn.btn-eklore.marg-bot-10(role="button" target="blank" href="mailto:benevole@eklore.fr") {{_ "becomeAVolunteer"}}
		.container-fluid
			+majorVolunteers
		.container-fluid.grey2
			.container
				h1.text-center.marg-bot-50.text-uppercase {{_ "volunteersLevel2"}}
				.row(style="display:flex; flex-wrap: wrap;")
					each volunteersListLevel10
						.col-xs-6.col-sm-4.col-md-2.col-lg-2
							.thumbnail
								img.partnerPicture(src="#{pictureUrl}" alt="#{firstName} #{lastName}")
								.caption
									h4.text-center #{firstName} #{lastName}
									p.text-center
										em #{functionInFete}
		.container
			h1.text-center.marg-bot-50.text-uppercase {{_ "volunteersLevel3"}}
			.row(style="display:flex; flex-wrap: wrap;")
				each volunteersListLevel99
					.col-xs-6.col-sm-4.col-md-2.col-lg-2
						.thumbnail
							img.partnerPicture(src="#{pictureUrl}" alt="#{firstName} #{lastName}")
							.caption
								h4.text-center #{firstName} #{lastName}
	else
		+spinner