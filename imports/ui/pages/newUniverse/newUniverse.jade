template(name="newUniverse")
	.container
		.panel.panel-default
			.panel-heading
				h3 {{_ "addNewUniverse"}}
			.panel-body
				form
					.form-group
						label(for="universeName") {{_ "universeName"}}
						input#universeName.form-control(type="text")
					.form-group
						label(for="universeLabel") {{_ "universeLabel"}}
						textarea#universeLabel.form-control(rows="3")
			.panel-footer
				.row
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						button#addUniverse.btn.btn-success.btn-block {{_ "validate"}}