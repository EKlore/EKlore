template(name="home")
	.container
		.jumbotron
			h1 {{_ "fete"}}
				small {{_ "feteAcronym"}}
		.panel.panel-default
			.panel-heading
				h3 {{_ "presentationFete"}}
			.panel-body
				p BLA BLA BLA
				p BLA BLA BLA
		.panel.panel-default
			.panel-heading
				h3 {{_ "localisationAndSchedule"}}
			.panel-body
				.col-sm-6.col-md6.col-lg-6
					.address.adresse
						strong {{_ "fete"}} {{_ "eklore"}}
						br
						| Le Grand Palais
						br
						| Avenue Winston-Churchill
						br
						| 75008 Paris
					.address.date
						strong {{_ "dateFete"}}
						br
						| {{_ "hourFete"}}
					.address
						strong {{_ "contact"}}
						br
						a(href="mailto:contact@fete-eklore.fr") contact@fete-eklore.fr
				.col-sm-6.col-md6.col-lg-6
					+Map
		a.btn.btn-primary.btn-lg.btn-block(role="button" href="{{pathFor 'myProfile'}}") {{_ "createYourProfile"}}
		.panel.panel-default.volunteers
			.panel-heading
				h3 {{_ "volunteers"}} {{_ "eklore"}}
					small {{_ "withoutThemNothingIsPossible"}}
			.panel-body
				.row
					each volunteersList
						.col-sm-6.col-md-4.col-lg-3
							.thumbnail
								img(src="#{pictureUrl}" alt="#{firstName} #{lastName}")
								.caption
									h4 #{firstName} #{lastName}
									em #{functionInFete}