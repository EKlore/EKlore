template(name="newPartner")
	.container
		.panel.panel-default
			.panel-heading
				h3 {{_ "addAPartner"}}
			.panel-body
				form
					.form-group
						label(for="partnerFirstName") {{_ "firstName"}}
						input#partnerFirstName.form-control(type="text")
					.form-group
						label(for="partnerLastName") {{_ "lastName"}}
						input#partnerLastName.form-control(type="text")
					.form-group
						label(for="partnerCompanyName") {{_ "partnerCompanyName"}}
						input#partnerCompanyName.form-control(type="text")
					.form-group
						label(for="partnerDescription") {{_ "description"}}
						input#partnerDescription.form-control(type="text")
			.panel-footer
				.row
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						button#addPartner.btn.btn-success.btn-block {{_ "validate"}}