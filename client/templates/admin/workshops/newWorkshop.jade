template(name="newWorkshop")
	.container
		.panel.panel-default
			.panel-heading
				h3 {{_ "addNewWorkshop"}}
			.panel-body
				form
					.form-group
						label(for="workshopName") {{_ "workshopName"}}
						input#workshopName.form-control(type="text")
					.form-group
						label(for="workshopDescription") {{_ "workshopDescription"}}
						textarea#workshopDescription.form-control(rows="3")
					.form-group
						label(for="workshopDateStart") {{_ "workshopStartDate"}}
						input#workshopDateStart.form-control(type="text" value="2016-09-24 10:00")
					.form-group
						label(for="workshopEndDate") {{_ "workshopEndDate"}}
						input#workshopEndDate.form-control(type="text" value="2016-09-24 11:00")
			.panel-footer
				.row
					.col-xs-12.col-sm-6.col-md-6.col-lg-6
						a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
					.col-xs-12.col-sm-6.col-md-6.col-lg-6
						button#addWorkshop.btn.btn-success.btn-block {{_ "validate"}}