template(name="listUsers")
	if Template.subscriptionsReady
		.panel.panel-default
			.panel-heading
				p.panel-title {{_ "allUsers"}}
			.panel-body
				p {{_ "thereAre"}}
					span.badge #{usersCount}
					| {{_ "users"}}.
				if usersCount
					table.table
						thead
							tr
								th #
								th {{_ "email"}}
								th {{_ "nbQuestionsGroupsAdded"}}
								th {{_"nbUserQuestionsAnswered"}} / {{_ "nbUserQuestionsCount"}}
								th {{_ "score"}}
								//th {{_ "actions"}}
						tbody
							each user
								tr
									td {{myIndex @index}}
									td #{emailAddress}
									td
										a.btn(class="#{questionsGroupsCountClass}" rolle="button" href="#")
											strong #{questionsGroupsCount}
									td
										a.btn(class="#{questionsGroupsCountClass}" role="button" href="#")
											strong #{questionsAnsweredCount} / #{questionsCount}
									td
										a.btn.btn-primary( role="button" href="#")
											strong #{profile.score}
									//td
										a.btn.btn-info(role="button" href="{{pathFor 'seeUserDetails'}}")
											span.glyphicon.glyphicon-edit(aria-hidden="true")
	else
		+spinner
