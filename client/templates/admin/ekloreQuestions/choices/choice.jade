template(name="choice")
	.choices.panel.panel-default
		.panel-heading
			p.panel-title #{label}
		.panel-body
			form
				.form-group
					label(for="choiceLabel") {{_ "label"}}
					input.choiceLabel.form-control(type="text" value="#{label}")
			.panel.panel-default
				.panel-heading
					h4.panel-title Universes
				.panel-body
					.panel.panel-success
						.panel-heading
							h4.panel-title {{_ "universesLinkedWithChoice"}}
						.panel-body
							.row
								each universesLinked
									.col-xs-12.col-sm-6.col-md-6.col-lg-6
										+universesToRemoveFromChoice
					.panel.panel-danger
						.panel-heading
							h4.panel-title {{_ "universesNotLinkedWithChoice"}}
						.panel-body
							.row
								each universes
									.col-xs-12.col-sm-6.col-md-6.col-lg-6
										+universesToAddToChoice
		.panel-footer
			.row
				.col-xs-12.col-sm-6.col-md-6.col-lg-6
					a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
				.col-xs-12.col-sm-6.col-md-6.col-lg-6
					button#save.btn.btn-success.btn-block {{_ "save"}}