template(name="aboutEklore")
	.container-fluid.blue2.no-padd
		img.center-block.img-logo(src="/pictures/banniere.png" alt="{{_ 'feteAcronym'}}")
	.container
		h1.text-center.feteTitle.marg-bot-50.text-uppercase {{_ "eklorePresentationTitle"}}
		section
			p.text-justify {{_ "eklorePresentation1"}}
		section
			p.text-justify {{_ "eklorePresentation2"}}
		section
			p.text-justify {{_ "eklorePresentation3"}}
			p.text-justify {{_ "eklorePresentation3Demi"}}
		blockquote
			p {{_ "quote2"}}
			footer {{_ "quote2Source"}}
		section
			p.text-justify {{_ "eklorePresentation4"}}
		section
			p.text-justify {{_ "eklorePresentation5"}}
		blockquote
			p {{_ "quote3"}}
			footer {{_ "quote3Source"}}
		section
			p.text-center
				.row
					.col-xs-12.col-sm-12.col-md-6.col-lg-6
						p.text-center
							a.btn.btn-eklore.marg-20(role="button" target="blank" href="http://eklore.fr/") {{_ "seeEKloreWebSite"}}
					.col-xs-12.col-sm-12.col-md-6.col-lg-6
						p.text-center
							if currentUser
								a.btn.btn-eklore.marg-20(role="button" href="{{pathFor 'myProfile'}}") {{_ "completeYourProfile"}}
							else
								a.btn.btn-eklore.marg-20(role="button" href="{{pathFor 'myProfile'}}") {{_ "createYourProfile"}}