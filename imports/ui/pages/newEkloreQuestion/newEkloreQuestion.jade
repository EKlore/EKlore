template(name="newEkloreQuestion")
	.container
		.panel.panel-default
			.panel-heading
				h3 {{_ "addNewEkloreQuestion"}}
			.panel-body
				form
					.form-group
						label(for="ekloreQuestionTitle") {{_ "ekloreQuestionTitle"}}
						input#ekloreQuestionTitle.form-control(type="text")
					.form-group
						label(for="ekloreQuestionLevel") {{_ "ekloreQuestionLevel"}}
						input#ekloreQuestionLevel.form-control(type="number" min="2" max="100" step="1" value="2")
					.panel.panel-default
						.panel-heading
							p.panel-title {{_ "displayType"}}
						.panel-body
							.radio
								label.radio-inline
									input(type="radio" name="displayType" value="scale" checked)
									| {{_ "scale1To10"}}
								label.radio-inline
									input(type="radio" name="displayType" value="yesNo")
									| {{_ "yesNo"}}
								label.radio-inline
									input(type="radio" name="displayType" value="qcm")
									| {{_ "qcm"}}
				if displayTypeScale
					p {{_ "scaleWouldBeDisplayedLikeThis"}}
					input(type="range" min="1" max="10" step="1")
				else
					if displayTypeYesNo
						p {{_ "yesNoWouldBeDisplayedLikeThis"}}
						.radio
							label.radio-inline
								input(type="radio" name="yesNo" value="yes" checked)
								| {{_ "yes"}}
							label.radio-inline
								input(type="radio" name="yesNo" value="no")
								| {{_ "no"}}
					else
						if displayTypeQcm
							.panel.panel-default
								.panel-heading
										p.panel-title {{_ "choicesForEkloreQuestion"}}
								.panel-body
									.row.choicesForEkloreQuestion
										.col-xs-12.col-sm-12.col-md-6.col-lg-6
											.panel.panel-default
												.panel-body
													form
														.form-group
															label {{_ "label"}}
															input.titleForChoice.form-control(type="text")
								.panel-footer
									button#addChoice.btn.btn-primary {{_ "addAChoice"}}
						else
							p {{_ "chooseDisplayTypeForEkloreQuestion"}}
			.panel-footer
				.row
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						button#addEkloreQuestion.btn.btn-success.btn-block {{_ "validate"}}