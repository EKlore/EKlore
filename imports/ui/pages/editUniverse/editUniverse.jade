template(name="editUniverse")
	if Template.subscriptionsReady
		.container
			with universe
				.panel.panel-default
					.panel-heading
						h3 {{_ "universeEdition"}} : #{name}
					.panel-body
						.panel.panel-default
							.panel-body
								form
									.form-group
										label(for="universeName") {{_ "universeName"}}
										input#universeName.form-control(type="text" value="#{name}")
									.form-group
										label(for="universeLabel") {{_ "universeLabel"}}
										textarea#universeLabel.form-control(rows="3") #{label}
									.form-group
										label(for="universePartner") {{_ "universePartner"}}
										input#universePartner.form-control(type="text" value="#{partner}")
									.form-group
										label(for="universePartnerLogo") {{_ "universePartnerLogo"}}
										input#universePartnerLogo.form-control(type="text" value="#{partnerLogo}")
									.form-group
										label(for="universePartnerDescription") {{_ "universePartnerDescription"}}
										textarea#universePartnerDescription.form-control(rows="3") #{partnerDescription}
									.form-group
										label(for="universePartnerWebsite") {{_ "universePartnerWebsite"}}
										input#universePartnerWebsite.form-control(type="text" value="#{partnerWebsite}")
									.form-group
										label(for="universeLocation") {{_ "universeLocation"}}
										input#universeLocation.form-control(type="text" value="#{location}")
									.form-group
										label(for="universeColor") {{_ "universeColor"}}
										input#universeColor.form-control(type="color" name="universeColor" value="#{color}")
							.panel-footer
								.row
									.col-xs-6.col-sm-6.col-md-6.col-lg-6
										a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
									.col-xs-6.col-sm-6.col-md-6.col-lg-6
										button#save.btn.btn-success.btn-block {{_ "save"}}
						.panel.panel-success
							.panel-heading
								p.panel-title {{_ "workshopsLinkedWithUniverse"}}
							.panel-body
								.row(style="display:flex; flex-wrap: wrap;")
									each workshopsLinked
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToRemove
						.panel.panel-danger
							.panel-heading
								p.panel-title {{_ "workshopsNotLinkedWithUniverse"}}
							.panel-body
								.row(style="display:flex; flex-wrap: wrap;")
									each workshopsNotLinkedToUniverse
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToAdd
	else
		+spinner