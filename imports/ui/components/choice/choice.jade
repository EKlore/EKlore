template(name="choice")
	.choices.panel.panel-default
		.panel-heading(id="#{idForChoice}")
			p.panel-title
				a(role="button" data-toggle="collapse" data-parent="#accordionChoice" href="##{collapseChoice}" aria-expanded="true" aria-controls="#{collapseChoice}")
					if label
						| #{label} : {{_ "clickToShowOrHide"}}
					else
						| {{_ "choiceNotDefined"}} : {{_ "clickToShowOrHide"}}
				.pull-right
					if displayTypeQcm
						button.removeChoiceFromEkloreQuestion.btn.btn-danger.btn-xs {{_ "removeChoiceFromEkloreQuestion"}}
					if ifChoiceValid
						button.btn.btn-success.btn-xs(type="button")
							span.glyphicon.glyphicon-ok(aria-hidden="true")
					else
						button.btn.btn-warning.btn-xs(type="button")
							span.glyphicon.glyphicon-warning-sign(aria-hidden="true")
		.panel-collapse.collapse(role="tabpanel" aria-labelledby="#{idForChoice}" id="#{collapseChoice}")
			.panel-body
				if displayTypeQcm
					.panel.panel-default
						.panel-body
							form.saveLabel
								.form-group
									label(for="#{choiceId}") {{_ "label"}}
									input.form-control(id="#{choiceId}" type="text" value="#{label}")
								button.btn.btn-success.btn-block(type="submit") {{_ "save"}}
				.panel.panel-default
					.panel-heading
						h4.panel-title {{_ "Muniverses"}}
					.panel-body
						.panel.panel-success
							.panel-heading
								h4.panel-title {{_ "universesLinkedWithChoice"}}
							.panel-body
								.row
									each universesLinked
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+universesToRemoveFromChoice
						.panel.panel-danger
							.panel-heading
								h4.panel-title {{_ "universesNotLinkedWithChoice"}}
							.panel-body
								.row
									each universes
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+universesToAddToChoice
				.panel.panel-default
					.panel-heading
						h4.panel-title {{_ "Mworkshops"}}
					.panel-body
						.panel.panel-success
							.panel-heading
								h4.panel-title {{_ "workshopsLinkedWithChoice"}}
							.panel-body
								.row
									each workshopsLinked
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToRemoveFromChoice
						.panel.panel-danger
							.panel-heading
								h4.panel-title {{_ "workshopsNotLinkedWithChoice"}}
							.panel-body
								.row
									each workshops
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToAddToChoice