template(name="header")
	nav.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#eklore-navbar" aria-expended="false")
					span.sr-only {{_ "toggleNav"}}
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="{{pathFor 'home'}}") {{_ "eklore"}}
			#eklore-navbar.collapse.navbar-collapse
				ul.nav.navbar-nav
					li(class="#{myProfileActive}")
						a(href="{{pathFor 'myProfile'}}") {{_ "myProfile"}}
					li(class="#{myDayActive}")
						a(href="{{pathFor 'myDay'}}") {{_ "myDay"}}
					li(class="#{meetingActive}")
						a(href="{{pathFor 'meeting'}}") {{_ "meeting"}}
				.nav.navbar-nav.navbar-right
					+loginButtons