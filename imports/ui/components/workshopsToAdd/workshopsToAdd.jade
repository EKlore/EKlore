template(name="workshopsToAdd")
	.panel.panel-default
		.panel-heading
			p.panel-title #{name}
		.panel-body
			form.form-inline.addWorkshopToUniverse
				.form-group
					label(for="matchingPower") {{_ "matchingPower"}}
					input.matchingPower.form-control(type="number" placeholder="0,01" min="0.01" max="1" step="0.01")
				button.btn.btn-success(type="submit") {{_ "add"}}