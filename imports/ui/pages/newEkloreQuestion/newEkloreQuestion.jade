template(name="newEkloreQuestion")
	.container
		.panel.panel-default
			.panel-heading
				h3 {{_ "addNewEkloreQuestion"}}
			.panel-body
				form
					.form-group
						label(for="ekloreQuestionTitle") {{_ "ekloreQuestionTitle"}}
						input#ekloreQuestionTitle.form-control(type="text")
					.form-group
						label(for="ekloreQuestionLevel") {{_ "ekloreQuestionLevel"}}
						input#ekloreQuestionLevel.form-control(type="number" min="2" max="100" step="1" value="2")
					.panel.panel-default
						.panel-heading
							p.panel-title {{_ "displayType"}}
						.panel-body
							.radio
								label.radio-inline
									input(type="radio" name="displayType" value="scale" checked)
									| {{_ "scale"}}
								label.radio-inline
									input(type="radio" name="displayType" value="yesNo")
									| {{_ "yesNo"}}
								label.radio-inline
									input(type="radio" name="displayType" value="qcm")
									| {{_ "qcm"}}
			.panel-footer
				.row
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
					.col-xs-6.col-sm-6.col-md-6.col-lg-6
						button#addEkloreQuestion.btn.btn-success.btn-block {{_ "validate"}}