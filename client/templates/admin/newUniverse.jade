template(name="newUniverse")
	.container
		.panel.panel-default
			.panel-heading
				h3 New universe
			.panel-body
				form
					.form-group
						label(for="universeName") Name
						input#universeName.form-control(type="text")
					.form-group
						label(for="universeLabel") Label
						textarea#universeLabel.form-control(rows="3")
					.col-xs-12.col-sm-6.col-md-6.col-lg-6
						a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") Cancel
					.col-xs-12.col-sm-6.col-md-6.col-lg-6
						button#addUniverse.btn.btn-success.btn-block Validate