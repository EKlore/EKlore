template(name="home")
	.jumbotron
		h1 {{_ "fete"}}
			small {{_ "feteAcronym"}}
	.panel.panel-default
		.panel-heading
			h3 {{_ "presentationFete"}}
		.panel-body
			p BLA BLA BLA
			p BLA BLA BLA
	a.btn.btn-info.btn-lg.btn-block.seeUniverses(role="button" href="{{pathFor 'seeUniverses'}}") {{_ "seeUniverses"}}
	.panel.panel-default
		.panel-heading
			h3 {{_ "localisationAndSchedule"}}
		.panel-body
			.col-xs-12.col-sm-6.col-md6.col-lg-6
				.address.adresse
					strong {{_ "fete"}} {{_ "eklore"}}
					br
					| Le Grand Palais
					br
					| Avenue Winston-Churchill
					br
					| 75008 Paris
				.address.date
					strong {{_ "dateFete"}}
					br
					| {{_ "hourFete"}}
				.address
					strong {{_ "contact"}}
					br
					a(href="mailto:contact@fete-eklore.fr") contact@fete-eklore.fr
			//.col-xs-12.col-sm-6.col-md6.col-lg-6
				+map
	if currentUser
		a.btn.btn-warning.btn-lg.btn-block(role="button" href="{{pathFor 'myProfile'}}") {{_ "completeYourProfile"}}
	else
		a.btn.btn-primary.btn-lg.btn-block(role="button" href="{{pathFor 'myProfile'}}") {{_ "createYourProfile"}}
	.panel.panel-default.volunteers
		.panel-heading
			h3 {{_ "volunteers"}} {{_ "eklore"}}
				small {{_ "withoutThemNothingIsPossible"}}
		.panel-body
			.row
				each volunteersList
					.col-xs-6.col-sm-6.col-md-4.col-lg-3
						.thumbnail
							img(src="#{pictureUrl}" alt="#{firstName} #{lastName}")
							.caption
								h4 #{firstName} #{lastName}
								em #{functionInFete}