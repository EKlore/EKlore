template(name="editEkloreQuestion")
	.container
		.panel.panel-default
			.panel-heading
				h3 {{_ "questionEdition"}} : #{title}
			.panel-body
				.panel.panel-default
					.panel-body
						form
							.form-group
								label(for="ekloreQuestionTitle") {{_ "ekloreQuestionTitle"}}
								input#ekloreQuestionTitle.form-control(type="text" value="#{title}")
							.form-group
								label(for="ekloreQuestionLevel") {{_ "ekloreQuestionLevel"}}
								input#ekloreQuestionLevel.form-control(type="number" min="2" max="100" step="1" value="#{level}")
							+editDeprecated
						.panel.panel-default
							.panel-heading
								h4.panel-title Choix
							.panel-body
								each choices
									.choices.panel.panel-default
										.panel-heading
											p.panel-title #{label}
										.panel-body
											form
												.form-group
													label(for="choiceLabel") {{_ "label"}}
													input.choiceLabel.form-control(type="text" value="#{label}")
								else
									.newChoice.panel.panel-default
										.panel-heading
											p.panel-title Choix n°1
										.panel-body
											form
												.form-group
													label(for="newChoiceLabel") {{_ "label"}}
													input.newChoiceLabel.form-control(type="text")
									.newChoice.panel.panel-default
										.panel-heading
											p.panel-title Choix n°2
										.panel-body
											form
												.form-group
													label(for="newChoiceLabel") {{_ "label"}}
													input.newChoiceLabel.form-control(type="text")
									.newChoice.panel.panel-default
										.panel-heading
											p.panel-title Choix n°3
										.panel-body
											form
												.form-group
													label(for="newChoiceLabel") {{_ "label"}}
													input.newChoiceLabel.form-control(type="text")
									.newChoice.panel.panel-default
										.panel-heading
											p.panel-title Choix n°4
										.panel-body
											form
												.form-group
													label(for="newChoiceLabel") {{_ "label"}}
													input.newChoiceLabel.form-control(type="text")
					.panel-footer
						.row
							.col-xs-12.col-sm-6.col-md-6.col-lg-6
								a.btn.btn-danger.btn-block(role="button" href="{{pathFor 'admin'}}") {{_ "cancel"}}
							.col-xs-12.col-sm-6.col-md-6.col-lg-6
								button#save.btn.btn-success.btn-block {{_ "save"}}
				.panel.panel-default
					.panel-heading
						h4 Universes
					.panel-body
						.panel.panel-success
							.panel-heading
								h4 {{_ "workshopsLinkedWithEkloreQuestion"}}
							.panel-body
								.row
									each universesLinked
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToRemoveFromEkloreQuestion
						.panel.panel-danger
							.panel-heading
								h4 {{_ "workshopsNotLinkedWithEkloreQuestion"}}
							.panel-body
								.row
									each universes
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToAddToEkloreQuestion
				.panel.panel-default
					.panel-heading
						h4 Workshops
					.panel-body
						.panel.panel-success
							.panel-heading
								h4 {{_ "workshopsLinkedWithEkloreQuestion"}}
							.panel-body
								.row
									each workshopsLinked
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToRemoveFromEkloreQuestion
						.panel.panel-danger
							.panel-heading
								h4 {{_ "workshopsNotLinkedWithEkloreQuestion"}}
							.panel-body
								.row
									each workshops
										.col-xs-12.col-sm-6.col-md-6.col-lg-6
											+workshopsToAddToEkloreQuestion
				if questionGroupId
					.panel.panel-success
						.panel-heading
							h4 Groupe de question lié à la question
						.panel-body
								with questionGroupData
									p #{title}
										button#removeQuestionGroupFromEkloreQuestion.btn.pull-rigth.btn-danger {{_ "remove"}}
				else
					.panel.panel-danger
						.panel-heading
							h4 Groupe de question disponibles
						.panel-body
							.row
								each questionsGroups
									.col-xs-12.col-sm-6.col-md-6.col-lg-6
										.panel.panel-default
											.panel-body
												p #{title}
													button.btn.linkToEkloreQuestion.pull-right.btn-success(type="submit") {{_ "linkToEkloreQuestion"}}