template(name="questions")
		//.panel.panel-default
			.panel-heading
				.panel-title
					h2 #{title}
			.panel-body
				.form-group
					.col-xs-12.col-sm-12.col-md-12.col-lg-12
						.input-group
							.btn-group
								each choices
									a.btn.radioBtn.btn-primary.btn-lg(class="#{choiceIndex}" data-toggle='fun', data-title='#{choiceId}') #{label}
							input#fun(type='hidden', name='fun')
			.panel-footer
				.row
					.col-xs-12.col-sm-12.col-md-12.col-lg-12
						button.btn-block.btn-lg#nextQuestion.btn.btn-success(type="button") {{_ "next"}}